---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Cartes from '../components/cartes.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="flex flex-col min-h-screen items-center justify-center text-center">
			<h3 class="text-3xl md:text-3xl mb-3" >Étudiant à la Normandie Web School</h3>
			<h1 class="text-6xl md:text-8xl font-bold mb-6"style="color:rgb(28, 98, 98);">HADDANE Anas</h1>
			<h5 class="text-lg md:text-xl text-gray-500">En recherche d'alternance en tant que développeur web</h5>
			
			<br/>
			<Cartes />

		</main>

		<Footer />
	</body>
</html>